    <script>
        $(function () {
            $(document).scroll(function () {
                var $nav = $(".fixed-top");
                var $nav_img = $('.navbar-brand img');
                $nav.toggleClass('scrolled', $(this).scrollTop() > $nav.height());
                if ($(document).scrollTop() > $nav.height()) {
                    $nav_img.attr("src", "assets/images/niche-logo.png");
                } else {
                    $nav_img.attr("src", "assets/images/niche-logo.png");
                }
            });
        });
